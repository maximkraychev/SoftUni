<section class="details-page">
    <h1>Details</h1>
    <article class="details-card">

        <article class="details-card-text">
            <h2>Title:<br> {{product.title}}</h2>
            <h3>Author: {{product.author}}</h3>
            <h3>Stars: {{product.stars}}</h3>
            <h3>Genre: {{product.genre}}</h3>
            <h3>Review: {{product.bookReview}}</h3>

            {{#unless isGuest}}
            <!-- If there is no registered user, do not display buttons-->
                <div class="buttons">
                    {{#if isOwner}}
                    <!-- Only for registered user and author of the review -->
                    <a href="/product/details/{{product._id}}/edit" class="btn-edit">Edit</a>
                    <a href="/product/details/{{product._id}}/delete" class="btn-delete">Delete</a>
                    {{else}}
                        {{#if isAlredyWhished}}
                        <!-- logged in user who has already wished book-->
                        <p class="wish-pub">You already added the book to your wish list</p>
                        {{else}}
                        <!-- logged in user who has not yet wished book-->
                        <a href="/product/details/{{product._id}}/whish" class="btn-wish">Wish to read</a>
                        {{/if}}
                    {{/if}}
                </div>
            {{/unless}}
        </article>

        <article class="details-card-image">
            <img src="{{product.image}}">
        </article>

    </article>
</section>