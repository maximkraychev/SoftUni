<section id="create-section" class="">

    <h1 class="item">New Auction</h1>

    <div class="item padded align-center">

        <form class="layout left large" method="post" action="/product/create">

            <div class="col aligned">
                <label>
                    <span>Title</span>
                    <input type="text" name="title" value="{{body.title}}"></label>
                <label>
                    <span>Category</span>
                    <select name="category">
                        <option value="estate" {{#if (isContain body.category 'estate' )}}selected{{/if}} >Real Estate</option>
                        <option value="vehicles" {{#if (isContain body.category 'vehicles' )}}selected{{/if}} >Vehicles</option>
                        <option value="furniture" {{#if (isContain body.category 'furniture' )}}selected{{/if}} >Furniture</option>
                        <option value="electronics" {{#if (isContain body.category 'electronics' )}}selected{{/if}} >Electronics</option>
                        <option value="other" {{#if (isContain body.category 'other' )}}selected{{/if}} >Other</option>
                    </select>
                </label>
                <label>
                    <span>Image URL</span>
                    <input type="text" name="imageUrl" value="{{body.imageUrl}}"></label>
                <label>
                    <span>Starting price</span>
                    <input type="number" name="price" value="{{body.price}}"></label>
            </div>

            <div class="content pad-med align-center vertical">
                <label>
                    <span>Description</span>
                    <textarea name="description">{{body.description}}</textarea>
                </label>

                <div class="align-center">
                    <input class="action" type="submit" value="Publish Item">
                </div>
            </div>

        </form>

    </div>

</section>