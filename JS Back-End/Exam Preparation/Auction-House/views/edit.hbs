{{#with product}}
<section id="create-section">

    <h1 class="item">Edit Auction</h1>

    <div class="item padded align-center">

        <form class="layout left large" method="post" action="/product/details/{{_id}}/edit">

            <div class="col aligned">
                <label>
                    <span>Title</span>
                    <input type="text" name="title" value="{{title}}"></label>
                <label>
                    <span>Category</span>
                    <select name="category">
                        <option value="estate" {{#if (isContain category 'estate' )}} selected {{/if}}>Real Estate</option>
                        <option value="vehicles" {{#if (isContain category 'vehicles' )}} selected {{/if}}>Vehicles</option>
                        <option value="furniture" {{#if (isContain category 'furniture' )}} selected {{/if}}>Furniture</option>
                        <option value="electronics" {{#if (isContain category 'electronics' )}} selected {{/if}}>Electronics</option>
                        <option value="other" {{#if (isContain category 'other' )}} selected {{/if}}>Other</option>
                    </select>
                </label>
                <label>
                    <span>Image URL</span>
                    <input type="text" name="imageUrl" value="{{imageUrl}}">
                </label>
                <label>
                    <span>Starting price</span>

                    <!-- If the current auction has a bidder, this input field should be disabled -->
                    <input type="number" name="price" value="{{price}}" {{#if bidder}} disabled {{/if}}>
                </label>
            </div>

            <div class="content pad-med align-center vertical">
                <label>
                    <span>Description</span>
                    <textarea name="description">{{description}}</textarea>
                </label>

                <div class="align-center">
                    <input class="action" type="submit" value="Update Listing">
                </div>
            </div>

        </form>

    </div>

</section>
{{/with}}