{{#with product}}
<!-- Details Page - Auction owner -->
<section id="catalog-section">

    <h1 class="item">
        Fishing Boat
        <div class="f-right">
            <a class="action pad-small f-left" href="/product/details/{{_id}}/edit">Edit</a>
            <a class="action pad-small f-left" href="/product/details/{{_id}}/delete">Delete</a>
        </div>
    </h1>
    <div class="item padded">

        <div class="layout right large">

            <div class="col">
                <img src="{{imageUrl}}" class="img-large">
            </div>

            <div class="content pad-med">

                <p>In category: <strong>{{category}}</strong></p>
                <p>{{description}}</p>

                <div class="align-center">
                    <div>
                        Current price: $<strong>{{price}}</strong>
                    </div>

                    <div>
                        {{#if bidder}}
                        <!-- If there is a bidder -->
                        Bid by <strong>{{bidder.firstName}} {{bidder.lastName}}</strong>
                        <a class="action pad-med cta" href="/product/details/{{_id}}/closed">Close Auction</a>
                        {{else}}
                        <!-- If there are no bids -->
                        No bids
                        {{/if}}
                    </div>
                </div>

            </div>
        </div>

        <footer>Listed by {{author.firstName}} {{author.lastName}}</footer>
    </div>

</section>
{{/with}}