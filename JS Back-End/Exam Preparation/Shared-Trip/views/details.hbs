<section class="py-5 details" id="trip-details-page">
    <div class="container">
        <div class="destination">
            <div>
                <span class="icon"><i class="fas fa-map-marked-alt"></i></span>
                <h5> from <span>{{product.startPoint}}</span> to <span>{{product.endPoint}}</span> </h5>
            </div>
            <div>
                <span class="icon"><i class="fas fa-calendar-alt"></i></span>
                <h5> <span>{{product.date}}</span> at <span>{{product.time}}</span> </h5>
            </div>
        </div>
        <p class="line"></p>
        <div class="buddies-info">
            <i class="fas fa-users buddies"></i>
            <h5>Shared trip Buddies</h5>
            <div>
                {{#if product.buddies}}
                <!-- if there are joined buddies for the current trip separate them with comma and space", " -->
                <p>{{product.buddies}}</p>
                {{else}}
                <!-- If not display: -->
                <p>there are no buddies yet...</p>
                {{/if}}
            </div>
            <h5>Driver: <span>{{product.owner.email}}</span> </h5>
        </div>
        <p class="line"></p>
        <h5 class="brand">Car Brand: <span class="lead">{{product.carBrand}}</span></h5>
        <div class="trip-info">
            <div>
                <img class="img-fluid rounded" src="{{product.carImage}}" alt="car-image">
            </div>
            <div class="trip-desc">
                <h5>Information about the trip</h5>
                <textarea class="lead"
                    disabled>{{product.description}}</textarea>
                <h5>Price: <span class="lead">{{product.price}}</span> BGN</h5>
                {{#if user}}
                <!-- if there are no logged in user do not show div with class actions  -->
                <div class="actions">
                    {{#if isOwner}}
                        <!-- Only for logged user and creator to this trip -->
                        <a href="/product/details/{{product._id}}/delete" class="btn btn-danger">Delete this trip</a>
                        <a href="/product/details/{{product._id}}/edit" class="btn btn-warning">Edit this trip</a>
                    {{else}}
                        {{#if isThereFreeSeats}}
                            {{#if isAlreadyJoined}}
                            <!-- logged in user and has already joined the trip  -->
                            <span class="btn btn-info">Already joined. Don't be late!</span>

                            {{else}}
                            <!-- logged in user with available seats -->
                            <a href="/product/details/{{product._id}}/join" class="btn btn-join">Join now, [ {{product.seats}} ] seats left!</a>
                            {{/if}}
                        {{else}}
                            <!-- logged in user with no available seats -->
                            <span class="btn btn-secondary">No seats available! [0]</span>
                        {{/if}}
                    {{/if}}
                </div>
                {{/if}}
            </div>
        </div>
    </div>
</section>