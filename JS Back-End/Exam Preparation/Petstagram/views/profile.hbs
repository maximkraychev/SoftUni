<!-- Start Profile Details Section -->
<div class="profile">

    <!-- Start Profile Personal Data Section -->
    <div class="profile-data">
        <div class="profile_img">
            <div class="image">
                <img src="/static/images/person.png" alt="img8">
            </div>
        </div>
        <div class="personal">
            <div class="edit">
                <!-- User Username -->
                <p>{{username}}</p>
            </div>
            <div class="data">

                <!-- Total Number of Photos by the User -->
                <span>{{photoNumber}}</span>
                <p>photos</p>

            </div>
            <!-- User Email Address -->
            <p class="email">{{email}}</p>
        </div>
    </div>

    <!-- Start Uploaded Photos Section -->
    <div class="pet-photos">

        <!-- Link to Uploaded Pet Photo -->
        {{#each userPhotos}}
        <a href="/product/details/{{_id}}">
            <!-- Pet Photo -->
            <img src="{{image}}"
                alt="pet img">
        </a>
        {{else}}
        <!--If there are no photo yet!-->
        <article class="not-available-photo">
            <h1>You haven't uploaded photos yetâ€¦</h1>
        </article>
        {{/each}}
    </div>

</div>