<section id="create-container">
    <div class="create-container-info">
        <h1>Create Announcement</h1>
        <h4>Post your coins to sell</h4>
        <form action="/product/create" method="post">
            <label>Name:</label>
            <input type="text" id="name" name="name" placeholder="Bitcoin" value="{{body.name}}">
            <label>Image:</label>
            <input type="text" id="image" name="image" placeholder="http://..." value="{{body.image}}">
            <label>Price:</label>
            <input type="number" id="price" name="price" placeholder="31,166.71" value="{{body.price}}">
            <label>Description:</label>
            <textarea id="description" name="description" placeholder="Introduce your coins...">{{body.description}}</textarea>
            <label>Payment method:</label>
            <select id="payment" name="payment">
                <option value="crypto-wallet" {{returnSelectedIfEqual body.payment 'crypto-wallet'}}>Crypto Wallet</option>
                <option value="credit-card" {{returnSelectedIfEqual body.payment 'credit-card'}}>Credit Card</option>
                <option value="debit-card" {{returnSelectedIfEqual body.payment 'debit-card'}}>Debit Card</option>
                <option value="paypal" {{returnSelectedIfEqual body.payment 'paypal'}}>PayPal</option>
            </select>
            <input type="submit" id="btn" value="TRADE"></input>
        </form>
    </div>