<section id="details-info">
    <h1>Details</h1>
    <div class="coin-image">
        <img src="{{product.image}}">
    </div>

    <div class="coin-info">
        <div class="coin-text">
            <h1 id="name">{{product.name}}</h1>
            <h3 id="payment">Payment method: {{product.payment}}</h3>
            <p id="price"><span>Price: ${{product.price}}</span></p>
            <p id="description">{{product.description}}</p>
        </div>
        {{#if user}}
        <div class="product-btn">
            {{#if isOwner}}
            <!--Only for registered user and author of the publication -->
            <div class="author">
                <a href="#" class="btn-edit">Edit</a>
                <a href="#" class="btn-delete">Delete</a>
            </div>
            {{else}}
                {{#if isAlredyBought}}
                <!-- Logged in user who has already buy this crypto-->
                <p class="buy-message">You already bought these crypto coins.</p>
                {{else}}
                <!-- Logged in user who has not yet buy this crypto-->
                <a href="/product/details/{{product._id}}/buy" class="btn-buy">Buy</a>
                {{/if}}

            {{/if}}
        </div>
        {{/if}}
    </div>
</section>