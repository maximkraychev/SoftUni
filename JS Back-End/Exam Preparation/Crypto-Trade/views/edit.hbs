{{#with product}}
<section id="edit-container">
    <div class="edit-container-info">
        <h1>Edit Announcement</h1>
        <form action="/product/details/{{_id}}/edit" method="post">
            <label>Name:</label>
            <input type="text" id="name" name="name" value="{{name}}">
            <label>Image:</label>
            <input type="text" id="image" name="image" value="{{image}}">
            <label>Price:</label>
            <input type="number" id="price" name="price" value="{{price}}">
            <label>Description:</label>
            <textarea name="description"
                id="description">{{description}}</textarea>
            <label>Payment method:</label>
            <select id="payment" name="payment">
                <option value="crypto-wallet" {{returnSelectedIfEqual payment 'crypto-wallet'}}>Crypto Wallet</option>
                <option value="credit-card" {{returnSelectedIfEqual payment 'credit-card'}}>Credit Card</option>
                <option value="debit-card" {{returnSelectedIfEqual payment 'debit-card'}}>Debit Card</option>
                <option value="paypal" {{returnSelectedIfEqual payment 'paypal'}}>PayPal</option>
            </select>
            <input type="submit" id="btn" value="EDIT"></input>
        </form>
    </div>
</section>
{{/with}}