<!-- Search - Gaming Team -->
<main id="search">
    <section class="game-search">
        <h1>Search</h1>

        <form class="search-form" action="/search" method="post">
            <input type="text" class="search-game" name="search" placeholder="Search here..." value="{{body.search}}">
            <select id="platform" name="platform">
                <option value="">-------</option>
                <option value="PC"{{#if body.pc}}selected{{/if}}>PC</option>
                <option value="Nintendo"{{#if body.nintendo}}selected{{/if}}>Nintendo</option>
                <option value="PS4"{{#if body.ps4}}selected{{/if}}>PS4</option>
                <option value="PS5"{{#if body.ps5}}selected{{/if}}>PS5</option>
                <option value="XBOX"{{#if body.xbox}}selected{{/if}}>XBOX</option>
            </select>
            <button type="submit" class="btn-search">Search</button>
        </form>
        {{#if games}}
        <div class="search-result">
            <div class="search-list">
                {{#each games}}
                {{> game}}
                {{/each}}
            </div>
        </div>
        {{else}}

        <div class="no-match">
            <p>No match was found!</p>
        </div>
        {{/if}}
    </section>
</main>






