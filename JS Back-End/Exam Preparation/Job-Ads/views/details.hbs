<section id="details-page">
    <article class="details-gage-title">
        <h1>Details Page</h1>
    </article>
    <article class="details-page-card">

        <article class="details-page-card-image">
            <img src="/static/img/man.png" alt="details-image">
        </article>

        <article class="details-page-card-content">
            <p>Author: {{product.author.email}}</p>
            <h2>Headline: {{product.headline}}</h2>
            <h3>Company name: {{product.companyName}}</h3>
            <h4>Company description: {{product.companyDescription}}</h4>
            <h5>Location: {{product.location}}</h5>
            {{#if user}}
            <article class="details-page-card-buttons">
                {{#if isOwner}}
                    <a href="/product/details/{{product._id}}/edit" class="btn-edit">Edit</a>
                    <a href="/product/details/{{product._id}}/delete" class="btn-delete">Delete</a>
                {{else}}
                    {{#if isAlredyApplied}}
                        <p class="already-applied">You have already applied!</p>
                        {{else}}
                        <a href="/product/details/{{product._id}}/applay" class="btn-apply">Apply now!</a>
                        <p class="applied-people">Hurry up, {{numberOfApplied}} people have already applied.</p>
                    {{/if}}
                {{/if}}
            </article>
            {{/if}}
        </article>

    </article>
</section>

