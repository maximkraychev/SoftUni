<section id="all-ads-page">
    <article class="all-ads-title">
        <h1>All ads</h1>
    </article>

    {{#each products}}
    <article class="all-ads-card">
        <article class="all-ads-card-image">
            <img src="/static/img/job-icon1.png" alt="job-icon">
        </article>

        <article class="all-ads-card-content">
            <h2>{{headline}}</h2>
            <h3>Company Name: {{companyName}}</h3>
            <article class="all-ads-card-content-item">
                <img src="/static/img/map-icon.png">
                <p>Location {{location}}</p>
            </article>
        </article>

        <article class="all-ads-card-buttons">
            <a href="/product/details/{{_id}}" class="btn-details">Details</a>
        </article>
    </article>
    {{else}}
    <article class="not-available-ads">
        <h1>No ads created yet.</h1>
        <h2>Join and find your perfect workers.</h2>
    </article>
    {{/each}}
</section>