<section id="edit-page">
    <div class="edit-container">
        <div class="box-image">

        </div>
        <h2 class="box-heading">
            Edit Home
        </h2>

        <form class="form" action="/product/details/{{body._id}}/edit" method="post">
                       <div class="input">
                <input type="text" class="input-field" id="home-name" placeholder="Real House Luxury Villa..." name="name"
                    value="{{body.name}}" />
                <label class="home-name">Name:</label>
            </div>
            <div class="input">
                <input type="text" class="input-field" id="type" placeholder="Villa..." name="type" value="{{body.type}}" />
                <label class="type">Property Type:</label>
            </div>
            <div class="input">
                <input type="number" class="input-field" id="year" placeholder="2018..." name="year" value="{{body.year}}" />
                <label class="year">Year Built:</label>
            </div>
            <div class="input">
                <input type="text" class="input-field" id="city" placeholder="Sofia..." name="city" value="{{body.city}}" />
                <label class="city">City</label>
            </div>

            <div class="input">
                <input type="text" class="input-field" id="homeImage" placeholder="Image..." name="homeImage" value="{{body.homeImage}}" />
                <label class="homeImage">Home Image:</label>
            </div>

            <div class="input">
                <input type="text" class="input-field" id="description" placeholder="Description..." name="propertyDescription" value="{{body.propertyDescription}}" />
                <label class="description">Property Description:</label>
            </div>

            <div class="input">
                <input type="number" class="input-field" id="availablePieces" placeholder="1" name="availablePieces" value="{{body.availablePieces}}" />
                <label class="availablePieces">Available pieces:</label>
            </div>

            <div class="create-action">
                <button class="create-button">Edit</button>
            </div>
        </form>
    </div>
</section>