<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/static/styles/styles.css" />
    <title>{{title}}</title>
</head>

<body>
    {{#if error}}
    <div>
        <div class="errorContainer">
            {{#each error.messages}}
            <p>{{this}}</p>
            {{/each}}
        </div>
    </div>
    {{/if}}

    <div id="wrapper">
        <header>
            <!-- Navigation -->
            <nav>
                <div>
                    <a href="#">Home</a>
                    <a href="#">Dashboard</a>
                    <a href="#">Search</a>
                </div>
                {{#if user}}
                <!-- Logged-in users -->
                <div class="user">
                    <a href="#">Add Animal</a>
                    <a href="#">Logout</a>
                </div>
                {{else}}
                <!-- Guest users -->
                <div class="guest">
                    <a href="#">Login</a>
                    <a href="#">Register</a>
                </div>
                {{/if}}
            </nav>
        </header>
        {{{body}}}
        <footer>
            <p>@Friendly World</p>
        </footer>
    </div>
</body>

</html>